        },
        "hatefulLanguage": {
          "type": "boolean",
          "description": "Hateful language directed at marginalized groups"
        },
        "hatefulLanguageReligious": {
          "type": "boolean",
          "description": "Hateful language directed at religious groups (e.g., Islamophobia, anti-Semitism)"
