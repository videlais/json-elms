{
  "name": "json-elms",
  "version": "0.5.0",
  "description": "Defines a JSON schema + validator for e-literature collections building on the Extended eLectronic Metadata Schema (ELMS)",
  "main": "src/validate.js",
  "scripts": {
    "test": "node --experimental-test-coverage --test test/validate.test.js",
    "lint": "eslint src/*.js",
    "lint:test": "eslint test/*.test.js",
    "all": "npm run lint && npm run lint:test && npm test"
  },
  "keywords": [
    "elit",
    "e-literature",
    "json",
    "schema",
    "metadata",
    "ELMS"
  ],
  "author": "Dan Cox",
  "license": "MIT",
  "devEngines": {
    "runtime": {
      "name": "node",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "onFail": "error"
    }
  },
  "type": "module",
  "dependencies": {
    "jsonschema": "^1.5.0"
  },
  "devDependencies": {
    "eslint-plugin-jest": "^29.0.1",
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0"
  }
}
